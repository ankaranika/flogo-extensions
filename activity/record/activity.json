{
  "name": "record",
  "version": "0.0.1",
  "type": "flogo:activity",
  "title": "Record audio",
  "description": "Record audio from microphone for 5 seconds",
  "ref": "github.com/ankaranika/flogo-extensions/activity/record",
  "author": "Anna Karanika <ankaranika@uth.gr>",
  "inputs":[
    {
      "name": "audiotype",
      "type": "string",
      "allowed": ["wav", "raw"],
      "required": true
    }
  ],
  "outputs":[
    {
      "name": "recording",
      "type": "any"
    }
  ]
}
